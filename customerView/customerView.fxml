      <Label layoutX="136.0" layoutY="14.0" text="CUSTOMER VIEW" textFill="SEAGREEN">
         <font>
            <Font name="Cambria Bold" size="40.0" />
         </font>
      </Label>
      <Label layoutX="83.0" layoutY="102.0" prefHeight="26.0" prefWidth="150.0" text="Customer Type" textFill="#fffefe">
         <font>
            <Font name="Cambria Bold" size="18.0" />
         </font>
      </Label>
      <ComboBox fx:id="comboCustomer" layoutX="61.0" layoutY="132.0" onAction="#doComboCustomer" prefWidth="150.0" style="-fx-border-color: #2E8B57; -fx-border-width: 3;" />
